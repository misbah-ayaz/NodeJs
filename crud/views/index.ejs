<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title>Login System in Node.js Express</title>
        <style>
           .bg-nav{
                background-color: #ebf1f6;
            }
            .white-bg{
                background-color: white;
            }
          .btn-property{
            color: #162b78;
            background-color: #95d5df;
            font-weight: bold;
            min-width: 500px;
            min-height: 60px;
          }
        </style>
    </head>
    <body>

        <div class="container">
          

            
                <% if(session.user_id) { %>
                  <div class="container  bg-nav">
                    <nav class="navbar navbar-light white-bg" style="justify-content: center;">
                    
                          <span class="navbar-text titleset">
                            
                            <h1 class="mt-3 "><%= title %></h1>
                          </span>
                      
                    </nav>
                    <div class="row">
                    <div class="col-md-8">
                        <div class="row mt-5">
                            <div class = "col-md-2"></div>
                            <div class="col-md-10">
                                <button type="button" class="btn btn-property" style="padding-right:10px;"> <a href="/sample_data2" class="href">
                                    12 Marla House Insights
                                  </a></button>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class = "col-md-2"></div>
                            <div class="col-md-10">
                                <button type="button" class="btn btn-property" style="padding-right:10px;"> <a href="/sample_data3" class="href">
                                    I-8 Islamabad Houses
                                  </a></button>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class = "col-md-2"></div>
                            <div class="col-md-10">
                                <button type="button" class="btn btn-property" style="padding-right:10px;"> <a href="/sample_data4" class="href">
                                    2021 Houses For Sale
                                  </a></button>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class = "col-md-2"></div>
                            <div class="col-md-10">
                                <button type="button" class="btn btn-property" style="padding-right:10px;"> <a href="/sample_data5" class="href">
                                    Change in price (Price Index)
                                  </a></button>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class = "col-md-2"></div>
                            <div class="col-md-10">
                                <button type="button" class="btn btn-property" style="padding-right:10px;"> <a href="/sample_data5" class="href">
                                    6 Bedroom House
                                  </a></button>
                            </div>
                        </div>
                       
                    </div>
                    <div class="col-md-4">
                        <img src="/images/house bg.png" alt="My_Logo" width="500" height="600" style="float:right;">
                    </div>
                    </div>
                </div>
                    

                    <a href="/logout" class="btn btn-primary">Logout</a>

                <% } else { %>
                  <div class="row mt-5">
                    <div class="col-md-3">&nbsp;</div>
                      <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">Login</div>
                        <div class="card-body">
                            <form method="post" action="/login">
                                <div class="mb-3">
                                    <label>Email Address</label>
                                    <input type="email" name="user_email_address" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label>Password</label>
                                    <input type="password" name="user_password" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <input type="submit" class="btn btn-primary" value="Login" />
                                </div>
                            </form>
                        </div>
                    </div>

               
                </div>
            </div>
        </div>
        <% } %>
    </body>
</html>