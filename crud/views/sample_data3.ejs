<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title></title>
        <style>
            .bg-nav{
                background-color: #ebf1f6;
            }
            .white-bg{
                background-color: white;
            }
          .btn-property{
            color: #162b78;
            background-color: #95d5df;
            font-weight: bold;
          }
        </style>
    </head>
    <body>
        
        <div class="container  bg-nav">
            <nav class="navbar navbar-light white-bg" style="justify-content: center;">
            
                  <span class="navbar-text titleset">
                    
                    <h1 class="mt-3 "><%= title %></h1>
                  </span>
              
            </nav>
            <div class="row">
            <div class="col-md-8">
                <div class="row mt-3">
                    
                </div>
                <div class="row">
                    <div class="container">
                        
                        
                        <% if(action == 'add') { %>
            
                        <% } else { %>
                            
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col"></div>
                                    <div class="col"></div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th>Id</th>
                                            <th>Location</th>
                                            <th>Type</th>
                                            <th>Price</th>
                                            <th>Bedroom</th>
                                          
                                        </tr>
                                        <%
                                        if(sampleData.length > 0)
                                        {
                                            sampleData.forEach(function(data){
                                        %>
                                        <tr>
                                            <td><%= data.id %></td>
                                            <td><%= data.Location %></td>
                                            <td><%= data.Type %></td>
                                            <td><%= data.Price %></td>
                                            <td><%= data.Bedroom %></td>
                                           

                                            
                                        </tr>
                                        <%
                                            });
                                        }
                                        else
                                        {
                                        %>
                                        <tr>
                                            <td colspan="5">No Data Found</td>
                                        </tr>
                                        <%
                                        }
                                        %>
                                    </table>
                                </div>
                            </div>
                        </div>
            
                        <% } %>
            
                    </div> 
                </div>
                
            </div>
            <div class="col-md-4">
                <img src="/images/house bg.png" alt="My_Logo" width="500" height="600" style="float:right;">
            </div>
            </div>
        </div>
        

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      
    </body>
</html>